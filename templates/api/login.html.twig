{% extends 'base.html.twig' %}

{% block title %}Iniciar sesión{% endblock %}

{% block stylesheets %}
<style>
    /* Estilos globales */
    body {
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 100vh;
        background-color: #f0f2f5;
        font-family: Arial, sans-serif;
        margin: 0;
        padding-top: 50px; /* Espacio en la parte superior */
    }

    /* Estilo del título, centrado y separado del formulario */
    h1 {
        font-size: 2rem;
        color: #333;
        margin-bottom: 2rem;
        text-align: center;
    }

    /* Contenedor del formulario */
    form {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        width: 100%;
        max-width: 400px;
        box-sizing: border-box;
    }

    /* Estilos para cada campo */
    form div {
        margin-bottom: 1.5rem;
    }

    label {
        display: block;
        font-size: 0.9rem;
        color: #666;
        margin-bottom: 0.5rem;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 0.8rem;
        font-size: 1rem;
        border-radius: 4px;
        border: 1px solid #ddd;
        box-sizing: border-box;
        transition: border-color 0.3s;
    }

    input[type="text"]:focus,
    input[type="password"]:focus {
        border-color: #007bff;
        outline: none;
    }

    /* Botón de inicio de sesión */
    button[type="submit"] {
        width: 100%;
        padding: 0.8rem;
        font-size: 1rem;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    button[type="submit"]:hover {
        background-color: #0056b3;
    }

    /* Mensaje de error */
    .error {
        color: #b52b27;
        background-color: #fdecea;
        border: 1px solid #f5c6cb;
        padding: 0.8rem;
        border-radius: 4px;
        margin-top: 1rem;
        text-align: center;
        font-size: 0.9rem;
    }
</style>
{% endblock %}

{% block body %}
    <h1>Iniciar sesión</h1>

    <form action="{{ path('login') }}" method="post">
        <div>
            <label for="email">Correo electrónico</label>
            <input type="text" id="email" name="email" required />
        </div>
        <div>
            <label for="password">Contraseña</label>
            <input type="password" id="password" name="password" required />
        </div>
        <div>
            <button type="submit">Iniciar sesión</button>
        </div>
    </form>

    {% if app.request.query.get('error') %}
        <div class="error">
            <p>Credenciales incorrectas, por favor intenta nuevamente.</p>
        </div>
    {% endif %}
{% endblock %}
